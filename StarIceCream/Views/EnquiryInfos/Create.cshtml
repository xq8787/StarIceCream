        <label asp-for="EnquiryDate" class="control-label"></label>
        <input asp-for="EnquiryDate" class="form-control" />
        <span asp-validation-for="EnquiryDate" class="text-danger"></span>
    </div>
        -->
            <div class="form-group">
                <input type="submit" value="Send Enquiry" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
